gcd = a, b => {
    if b == 0: -> a
    else -> gcd(b, a % b)
}

make_even = n => {
    if n % 2 == 0: -> n else -> n + 1
}

compare = a, b => {
    if a == b: -> 0
    else if a < b: -> -1
    else -> 1 # a > b
}

func = x, y => {
    a = x + y
    if a < 10:
        b = x - y
        c = b + a
        -> c - 100
    else -> a
}

ackermann = m, n => {
    if m == 0:
        -> n + 1
    else if n == 0:
        -> ackermann(m - 1, 1)
    else
        n2 = ackermann(m, n - 1)
        -> ackermann(m - 1, n2)
}

